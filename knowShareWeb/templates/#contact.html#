{% block javascript %}
        function SignUp()
        {
            $('#Home').removeClass("active");
            $('#Teacher').removeClass("active");
            $('#Contact').removeClass("active");
            $('#SignUpNavBtn').addClass("active");
            $('#LoginNavBtn').removeClass("active");
            
            $("#signUpModal").modal()   
        }
        
        function Login()
        {
            $('#Home').removeClass("active");
            $('#Teacher').removeClass("active");
            $('#Contact').removeClass("active");
            $('#SignUpNavBtn').removeClass("active");
            $('#LoginNavBtn').addClass("active");
            
            $("#loginModal").modal()   
        }
{% endblock %}        
